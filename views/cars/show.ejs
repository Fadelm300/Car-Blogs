<%- include('../partials/head.ejs') %> <%- include('../partials/_navbar.ejs') %>
<div class="container-box">
  <h1><%= car.name %></h1>

  <h1><%= car.model %></h1>
  <h1><%= car.car_company %></h1>
  <h1><%= car.car_manufacturer %></h1>
  <h1><%= car.top_speed %></h1>
  <h1><%= car.discription %></h1>

  <img src="/<%= car.image %>" alt="<%= car.name %>" style="width: 300px" />

  <a href="/users/<%= user._id %>/cars/<%= car._id %>/edit"
    ><button type="submit">Edit this item</button></a
  >

  <form
    action="/users/<%= user._id %>/cars/<%= car._id %>?_method=DELETE"
    method="post"
  >
    <button type="submit">Delete this item</button>
  </form>
</div>
<%- include('../partials/_footer.ejs') %> <%- include('../partials/end.ejs') %>
